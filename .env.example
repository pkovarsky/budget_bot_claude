# 🔐 Environment Variables for Budget Bot
# Copy this file to .env and fill in your values

# 🤖 Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# 🧠 OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# 🗄️ Database Configuration
DATABASE_URL=sqlite:///budget_bot.db
# For PostgreSQL: postgresql://username:password@localhost/budget_bot
# For MySQL: mysql://username:password@localhost/budget_bot

# 🐳 Docker Configuration
POSTGRES_PASSWORD=secure_postgres_password_change_me
REDIS_PASSWORD=secure_redis_password_change_me
GRAFANA_PASSWORD=secure_grafana_password_change_me

# 🌍 Application Settings
ENVIRONMENT=production
DEBUG=0
TZ=Europe/Amsterdam

# 🚀 Deployment (optional)
RAILWAY_TOKEN=your_railway_token_here
DEPLOY_HOST=your_server_host_here

# 📊 Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO

# 🔔 Notifications (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_here
DISCORD_WEBHOOK_URL=your_discord_webhook_here

# 📈 Analytics (optional)
GOOGLE_ANALYTICS_ID=your_ga_id_here